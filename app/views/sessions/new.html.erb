<div class="container" style="padding: 80px 0;">
  <h1>ログインページ</h1>
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <%= form_for(:session, url: login_path) do |f| %>
      <div style="padding: 50px; margin-bottom: 40px; border: 1px solid #333333; box-shadow: 4px 4px 8px #dddddd;">
        <div class="form-group">
          <%= f.label "Eメールアドレス" %>
          <%= f.email_field :email, class:"form-control", placeholder:"Eメールアドレス" %>
          <small class="text-muted">あなたのメールは他の誰とも共有しません。</small>
        </div>
        <div class="form-group">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, class:"form-control", placeholder:"パスワード" %>
        </div>
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
      <p>新しい学生ですか？ <%= link_to "新規登録はこちら", signup_path %></p>
  <% end %>
</div>
